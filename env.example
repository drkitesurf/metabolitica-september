# =============================================================================
# METABOLITICA SEPTEMBER - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001
ML_ENGINE_URL=http://localhost:8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://metabolitica:password@localhost:5432/metabolitica
DB_HOST=localhost
DB_PORT=5432
DB_NAME=metabolitica
DB_USER=metabolitica
DB_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# =============================================================================
# AI & MACHINE LEARNING
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@metabolitica.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=metabolitica-storage

# =============================================================================
# HEALTH DATA & COMPLIANCE
# =============================================================================
HIPAA_COMPLIANT=true
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years for HIPAA

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
DEBUG=true
LOG_REQUESTS=true
ENABLE_SWAGGER=true
MOCK_DATA_ENABLED=false

# =============================================================================
# n8N WORKFLOW AUTOMATION
# =============================================================================
N8N_URL=http://localhost:5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook/
N8N_USER=admin
N8N_PASSWORD=password

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_INSIGHTS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_MOBILE_APP=true
ENABLE_API_ACCESS=true
